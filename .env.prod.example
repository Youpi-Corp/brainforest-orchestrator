# ðŸŒ³ Brain Forest - Production Environment
# Copy this file to .env.prod and update with your settings

# Required: Set a secure database password
POSTGRES_PASSWORD=change-this-to-a-secure-password

# Required for HTTPS: Set your domain and email
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@example.com

# Optional: Customize if needed
NODE_ENV=production
SSL_EMAIL=admin@brain-forest.works
DOMAIN_NAME=brain-forest.works
API_DOMAIN=api.brain-forest.works

# === Monitoring & Logging ===
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# === Backup Configuration ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# === Scaling Configuration ===
BACKEND_REPLICAS=2
WORKER_PROCESSES=auto
